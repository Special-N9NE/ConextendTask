<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.QrApp" parent="Theme.Material3.Light.NoActionBar">
        <!-- Customize your light theme here. -->

        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryDark">@color/blueDark</item>

    </style>

    <style name="Theme.QrApp" parent="Base.Theme.QrApp" />

    <style name="defaultText">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/blackText</item>
        <item name="android:fontFamily">@font/medium</item>
    </style>

    <style name="Spinner" parent="Widget.AppCompat.AutoCompleteTextView">
        <item name="android:background">@drawable/shape_round</item>
        <item name="android:fontFamily">@font/medium</item>
        <item name="android:drawablePadding">16dp</item>
        <item name="android:inputType">none</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/blackText</item>
    </style>
</resources>